<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Book-List</title>
  </head>
  
  <body>
  <%- include('./partials/nav_bar.ejs') %>

  <div>
    <h2 style="margin-left: 15px; margin-top: 3%;">BOOK LIST</h2>
    <a href="/books/add" style="margin-left: 16px;"><button>ADD BOOK</button></a>  
  </div>

    <table border="1" style="margin-left: 15px; margin-top: 5%; width: 80%; text-align: center;">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Stock</th>
            <th>Choose your book</th>
            <th>Actions</th>
        </tr>

        <% books.forEach(book => { %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.author %></td>
                <td><%= book.category %></td>
                <td style="text-align: center;"><%= book.stock %></td>
                <td style="text-align: center;"><a href="/book/<%= book.id%>/rent">Rent Book</a></td>
                <td>
                    <a href="/books/<%= book.id %>/edit">Edit</a>
                    <a href="/books/<%= book.id %>/delete">Delete</a>
                </td>
            </tr> 
        <% }) %>
    </table><br>
  
</body>
</html>